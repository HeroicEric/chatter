<div class="border-form-div">
  <h2>Sign In!</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, label: false,
          placeholder: "Email Address", input_html: { class: 'form-control'} %><br>
      <%= f.input :password, required: false, label: false,
          placeholder: "Password", input_html: { class: 'form-control'} %>
      <%= f.input :remember_me, as: :boolean, label: false, inline_label: 'Yes, remember me',
          input_html: { class: 'checkbox'} if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Let's Chat!", class: 'btn btn-primary' %>
    </div><br>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
