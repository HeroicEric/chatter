<div class="border-form-div">
  <h2>Sign Up to Chat!</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :handle, required: true, autofocus: true, placeholder: "Handle",
          label: false, input_html: { class: 'form-control'} %><br>
      <%= f.input :email, required: true, placeholder: "Email Address",
          label: false, input_html: { class: 'form-control'} %><br>
      <%= f.input :password, required: true, placeholder: "Password",
          label: false, input_html: { class: 'form-control'} %><br>
      <%= f.input :password_confirmation, required: true, placeholder: "Password Confirmation", label: false, input_html: { class: 'form-control'} %><br>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Let's Chat!", class: 'btn btn-primary' %>
    </div><br>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
