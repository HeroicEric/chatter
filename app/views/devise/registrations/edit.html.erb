<div class="border-form-div">
  <h2>Edit Your Account</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :handle, required: true, autofocus: true, placeholder: "Handle",
          label: false, input_html: { class: 'form-control'} %><br>
      <%= f.input :email, required: true, placeholder: "Email Address",
          label: false, input_html: { class: 'form-control'} %><br>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, autocomplete: "off", placeholder: "Password (Leave Field Blank for No Change)", label: false, input_html: { class: 'form-control'} %><br>
      <%= f.input :password_confirmation, required: false,
          placeholder: "Password Confirmation", label: false,
          input_html: { class: 'form-control'} %><br>
      <%= f.input :current_password, required: true, placeholder: "Current Password",
          label: false, input_html: { class: 'form-control'} %><br>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update!", class: 'btn btn-primary' %>
    </div><br>
  <% end %>

  <p>Dont like Chatter? <%= link_to "Cancel My Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
<div>
